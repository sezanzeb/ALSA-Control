pcm.alsacontrol-output {{
    type softvol
    slave.pcm {{
        type softvol
        slave.pcm {{
            type plug
            slave.pcm "{output_pcm_2}"
        }}
        control {{
            name alsacontrol-output-volume
            card 0
        }}
    }}
    control {{
        name alsacontrol-output-mute
        card 0
    }}
    resolution 2
}}

pcm.alsacontrol-input {{
    type softvol
    slave.pcm {{
        type softvol
        slave.pcm {{
            type plug
            slave.pcm "{input_pcm_2}"
        }}
        control {{
            name alsacontrol-input-volume
            card 0
        }}
    }}
    control {{
        name alsacontrol-input-mute
        card 0
    }}
    resolution 2
}}

pcm.!default {{
    type asym
    playback.pcm {{
        type plug
        slave.pcm "{output_pcm_1}"
    }}
    capture.pcm {{
        type plug
        slave.pcm "{input_pcm_1}"
    }}
}}
